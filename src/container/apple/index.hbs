<div class='page'>
  {{#with header}}
    <div class='header'>
      <header class='header-content'>
        <div class='header-block'>
          <img src='/svg/apple.svg' alt='apple' class='header-icon' />
          <nav class='header-block'>
            {{#each links}}
              <a href='{{url}}' class='header-link'>{{text}}</a>
            {{/each}}
          </nav>
        </div>
        <div class='header-block'>
          <img src='/svg/search.svg' alt='Search ' class='header-icon' />
          <img src='/svg/profile.svg' alt='Profile' class='header-icon' />
        </div>
      </header>
    </div>
    <div class='ad'>
      {{#with ad}}
        <div class='ad-content'>
          <span>{{title}}</span>
          {{#with link}}
            <a href='{{url}}' class='ad-link'>{{text}}</a>
          {{/with}}
        </div>
      {{/with}}

    </div>
  {{/with}}

  {{#with iphone_pro}}
